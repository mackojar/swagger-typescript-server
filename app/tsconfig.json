{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    //"strictPropertyInitialization": false,
    "incremental": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true
  },
  "include": ["src"]
}
